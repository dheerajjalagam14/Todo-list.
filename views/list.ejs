<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
    <% newListItems.forEach(function(item){ %>
      <form  action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="checkbox" value="<%=item._id%>" onChange="this.form.submit()">
        <p><%= item.name %></p>
      </div>
      <input type="hidden" name="listName" value="<%=listTitle%>"></input>
      </form>
    <% }); %>


      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="Enter new Item" autocomplete="off">
        <button type="submit" name="list" value="<%=listTitle%>">+</button>
      </form>

      <form class="item" action="/deleteall" method="post">
        <p class="db">Delete entire list</p>
        <button type="submit" name="deletebutton" value="<%=listTitle%>"><i class="fas fa-trash-alt fa-xs"></i></button>
        </form>
  </div>

<%- include("footer") -%>
